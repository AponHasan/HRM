@model IEnumerable<Object>
@{
    Layout = null;
    List<MinistryOfLand.Models.GeneralInfo> generalinfo = Model.ToList()[0] as List<MinistryOfLand.Models.GeneralInfo>;
    List<MinistryOfLand.Models.UserAccount> uc = Model.ToList()[1] as List<MinistryOfLand.Models.UserAccount>;
    List<MinistryOfLand.Models.PostingRecord> pr = Model.ToList()[2] as List<MinistryOfLand.Models.PostingRecord>;
    ViewBag.Title = "PostingRecords";
    Layout = "~/Views/Shared/_Partial1Layout.cshtml";
}

<div class="row">
    <div class="col-sm-2">
        <div class="menu-option">
            <div class="user-section-pic">
                @foreach (var item in uc)
                {
                    <img src="~/@item.UserImage" height="200px" width="200px" />
                }
            </div>
            <div class="user-text">
                @foreach (var item in generalinfo)
                {
                    <h1>@item.Name</h1>
                    <p>@item.ContactPhone</p>
                    <p>@item.Email</p>
                    <p>@item.Rank</p>
                }
            </div>
            <div class="user-underline">

            </div>
            <div class="menu-left">
                <ul>
                    <li><a href="~/Admin/GenaralInfo">General info</a></li>
                    <li><a href="~/Admin/Education">Education</a></li>
                    <li><a href="~/Admin/Award">Award</a></li>
                    <li><a href="~/Admin/Publication">Publication</a></li>
                    <li><a href="~/Admin/Training">Training</a></li>
                    <li><a href="~/Admin/Travle">Foreign Travle</a></li>
                    <li><a href="~/Admin/Language">Language</a></li>
                    <li><a href="~/Admin/Children">Children</a></li>
                    <li><a href="~/Admin/PostingRecords">Posting Records</a></li>
                    <li><a href="~/Admin/PromotionalParticulars">Promotional Particulars</a></li>
                    @Html.ActionLink("LogOut", "LogOut", "Admin")
                </ul>
            </div>
        </div>

    </div>
    <div class="col-sm-8">

        <div class="col-sm-12">
            <div class="resume-text">
                <div class="col-md-9">
                    <h2>Posting Records</h2>
                </div>
                <div class="col-md-3">
                    <a href="~/Admin/Request"><h5>Request Edit</h5></a>
                </div>
            </div>
            <div class="underline">

            </div>
            <div class="col-md-12">
                <div class="clildren-table">
                    <table>
                        <tr>
                            <th>Organization</th>
                            <th>Country</th>
                            <th>Location</th>
                            <th>District</th>
                            <th>Thana</th>
                            <th>Posting Date</th>
                            <th>Posting From</th>
                            <th>Posting To</th>
                            <th>Pay Scal</th>
                        </tr>
                        @foreach (var item in pr)
                        {
                            <tr>
                                <td>@item.Organization</td>
                                <td>@item.Country</td>
                                <td>@item.Location</td>
                                <td>@item.District</td>
                                <td>@item.Thana</td>
                                <td>@item.PostingDate</td>
                                <td>@item.Pfrom</td>
                                <td>@item.PTo</td>
                                <td>@item.PayScal</td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-2">

    </div>
</div>

