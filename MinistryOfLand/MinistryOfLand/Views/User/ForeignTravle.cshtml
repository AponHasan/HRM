@model MinistryOfLand.Models.ForeignTravle
@{
    ViewBag.Title = "ForeignTravle";
}
<div class="row">
    <div class="col-md-2 st">

    </div>

    <div class="col-md-8 ">
        <div class="con-header">
            Foreign Travel
        </div>
        <div class="under">
        </div>
        <div class="formbody">
            @using (Html.BeginForm("ForeignTravle", "User", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <form class="form-horizontal" method="post">
                    
                    <div class="form-group">
                        <label for="Name" class="col-sm-4 control-label lbl">
                            User ID
                        </label>
                        <div class="col-sm-7">
                            @Html.ValidationMessageFor(model => model.userId)
                            @Html.DropDownListFor(model => model.userId, @ViewBag.UserAccountId as SelectList, "Select User", new { @class = "from-control inputfil" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Country" class="col-sm-4 control-label lbl">
                            Country
                        </label>
                        <div class="col-sm-7">
                            @Html.ValidationMessageFor(model => model.Country)
                            @Html.TextBoxFor(model => model.Country, new { @class = "from-control inputfil", @placeholder = "Country" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Purpuse" class="col-sm-4 control-label lbl">
                            Purpose
                        </label>
                        <div class="col-sm-7">
                            @Html.ValidationMessageFor(model => model.Purpuse)
                            @Html.TextBoxFor(model => model.Purpuse, new { @class = "from-control inputfil", @placeholder = "Purpose" })

                        </div>
                    </div>
                    <div class="form-group">
                        <label for="TFrom" class="col-sm-4 control-label lbl">
                            Travle From
                        </label>
                        <div class="col-sm-7">
                            @Html.ValidationMessageFor(model => model.TFrom)
                            @Html.TextBoxFor(model => model.TFrom, new { @class = "from-control inputfil", @placeholder = "Travle From" })

                        </div>
                    </div>
                    <div class="form-group">
                        <label for="TTo" class="col-sm-4 control-label lbl">
                            Travle To
                        </label>
                        <div class="col-sm-7">
                            @Html.ValidationMessageFor(model => model.TTo)
                            @Html.TextBoxFor(model => model.TTo, new { @class = "from-control inputfil", @placeholder = "Travle To" })
                        </div>
                    </div>                   
                    <div class="form-group">
                        <div class="col-sm-10 col-sm-offset-2 text-center">
                            <input type="submit" name="submit" class="btn btn-default" value="Submit" style="margin-top: 30px;width: 175px;margin-left: 50px;font-weight:bold;" />
                        </div>
                    </div>
                </form>
            }
        </div>
    </div>

    <div class="col-md-2 last">
    </div>
</div>