@model IEnumerable<MinistryOfLand.Models.PromotionalParticular>

@{
    ViewBag.Title = "DataPromotionalParticular";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Promotional Particular</h2>
<div class="clildren-table">
    <table class="table">
        <tr>
            <th>
                Rank
            </th>
            <th>
                Promotion
            </th>
            <th>
                G/O Date
            </th>
            <th>
                Natura Of Promotion
            </th>
            <th>
                Pay Scale
            </th>
            <th>
                User Name
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Rank)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Promotion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GODate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NaturalOfPromotion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PayScal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserAccount.username)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditPromotionalParticular", new { id = item.PromotionalParticularId }, new { @class = "edita" }) 
                    @Html.ActionLink("Details", "DetailsPromotionalParticular", new { id = item.PromotionalParticularId }, new { @class = "details" }) 
                    @Html.ActionLink("Delete", "DeletePromotionalParticular", new { id = item.PromotionalParticularId }, new { @class = "deletea" })
                </td>
            </tr>
        }

    </table>
</div>