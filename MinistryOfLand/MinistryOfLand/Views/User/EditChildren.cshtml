@model MinistryOfLand.Models.ChildrenInfo

@{
    ViewBag.Title = "EditChildren";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-sm-2">

</div>
<div class="col-sm-8">
    <h2>Edit Children Info</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
          
            <hr />
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.ChildrenInfoId)

            <div class="form-group">
                <label for="ChildrenName" class="col-sm-2 control-label lbl">
                    Children Name
                </label> 
                <div class="col-md-7">                    
                    @Html.TextBoxFor(model => model.ChildrenName, new { @class = "from-control inputfil" })
                    @Html.ValidationMessageFor(model => model.ChildrenName)
                </div>
            </div>

            <div class="form-group">
                <label for="ChildrenDOB" class="col-sm-2 control-label lbl">
                    Date of birth (mm/dd/yyyy)
                </label> 
                <div class="col-md-7">                    
                    @Html.TextBoxFor(model => model.ChildrenDOB, new { @class = "from-control inputfil" })
                    @Html.ValidationMessageFor(model => model.ChildrenDOB)
                </div>
            </div>

            <div class="form-group">
                <label for="ChildrenSex" class="col-sm-2 control-label lbl">
                    Gender
                </label> 
                <div class="col-md-7">                   
                    @Html.TextBoxFor(model => model.ChildrenSex, new { @class = "from-control inputfil" })
                    @Html.ValidationMessageFor(model => model.ChildrenSex)
                </div>
            </div>

            <div class="form-group">
                <label for="ChildrenName" class="col-sm-2 control-label lbl">
                    User id
                </label> 
                <div class="col-md-7">
                    @*@Html.EditorFor(model => model.userId)*@
                    <div class="editor-field">
                        @Html.TextBoxFor(model => model.userId, new {@class = "from-control inputfil", @readonly = "readonly" })
                    </div>
                    @Html.ValidationMessageFor(model => model.userId)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "DataChildren")
    </div>

</div>
<div class="col-sm-2">

</div>
