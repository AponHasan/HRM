@model MinistryOfLand.Models.Publication
@{
    ViewBag.Title = "Publication";
   
}

<div class="row">
    <div class="col-md-2 st">

    </div>

    <div class="col-md-8 ">
        <div class="con-header">
            Publication
        </div>
        <div class="under">
        </div>
        <div class="formbody">
            @using (Html.BeginForm("Publication", "User", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <form class="form-horizontal" method="post">
                    
                    <div class="form-group">
                        <label for="Name" class="col-sm-4 control-label lbl">
                            User Name
                        </label>
                        <div class="col-sm-7">
                            @Html.ValidationMessageFor(model => model.userId)
                            @Html.DropDownListFor(model => model.userId, @ViewBag.UserAccountId as SelectList, "Select User", new { @class = "from-control inputfil" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="BooksTitle" class="col-sm-4 control-label lbl">
                            Books Title
                        </label>
                        <div class="col-sm-7">
                            @Html.ValidationMessageFor(model => model.BooksTitle)
                            @Html.TextBoxFor(model => model.BooksTitle, new { @class = "from-control inputfil", @placeholder = "Books Title" })
                          
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Periodicals" class="col-sm-4 control-label lbl">
                            Periodicals
                        </label>
                        <div class="col-sm-7">
                            @Html.ValidationMessageFor(model => model.Periodicals)
                            @Html.TextBoxFor(model => model.Periodicals, new { @class = "from-control inputfil", @placeholder = "Periodicals" })
                          
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Monograph" class="col-sm-4 control-label lbl">
                            Monograph
                        </label>
                        <div class="col-sm-7">
                            @Html.ValidationMessageFor(model => model.Monograph)
                            @Html.TextBoxFor(model => model.Monograph, new { @class = "from-control inputfil", @placeholder = "Monograph" })
                       
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Journal" class="col-sm-4 control-label lbl">
                            Journal
                        </label>
                        <div class="col-sm-7">
                            @Html.ValidationMessageFor(model => model.Journal)
                            @Html.TextBoxFor(model => model.Journal, new { @class = "from-control inputfil", @placeholder = "Journal" })
                          
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Description" class="col-sm-4 control-label lbl">
                            Description
                        </label>
                        <div class="col-sm-7">
                            @Html.ValidationMessageFor(model => model.Description)
                            @Html.TextBoxFor(model => model.Description, new { @class = "from-control inputfil", @placeholder = "Description" })
                          
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="lprdate" class="col-sm-4 control-label lbl">
                            Date(mm/dd/yyyy)
                        </label>
                        <div class="col-sm-7">
                            @Html.ValidationMessageFor(model => model.Date)
                            @Html.TextBoxFor(model => model.Date, "{0:yyyy-MM-dd}", new { @class = "from-control inputfil", @placeholder = "(mm/dd/yyyy)", type = "Date" })
                           
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-10 col-sm-offset-2 text-center" style="margin-bottom:100px;">
                            <input type="submit" name="submit" class="btn btn-default" value="Submit" style="margin-top: 30px;width: 175px;margin-left: 50px;font-weight:bold;" />
                        </div>
                    </div>
                </form>
            }
        </div>
    </div>

    <div class="col-md-2 last">
    </div>
</div>
