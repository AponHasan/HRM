@model MinistryOfLand.Models.UserAccount
@{
    ViewBag.Title = "ForgetAdminPassword";
    Layout = "~/Views/Shared/_PartialLayout.cshtml";
}

<div class="col-sm-3">

</div>
<div class="col-sm-6">
    @*Forget password design for Admin*@

    <div class="con-header">
        Forget Password Field Validation
    </div>
    <div class="under">
    </div>
    <div class="formbody">
        @using (Html.BeginForm("ForgetAdminPassword", "Admin", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <form class="form-horizontal" method="post">

                <div class="form-group">
                    <label for="UserName" class="col-sm-4 control-label">
                        User Name
                    </label>
                    <div class="col-sm-7">
                        @Html.ValidationMessageFor(model => model.username)
                        @Html.TextBoxFor(model => model.username, new { @class = "from-control", @placeholder = "User Name", style = "width:525px;background-color:white;padding-top:5px;padding-buttom:5px;margin-top:5px;margin-bottom:5px;height:35px; padding-left:30px;" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="Email" class="col-sm-4 control-label">
                        Email
                    </label>
                    <div class="col-sm-7">
                        @Html.ValidationMessageFor(model => model.email)
                        @Html.TextBoxFor(model => model.email, new { @class = "from-control", @placeholder = "Your Email", style = "width:525px;background-color:white;padding-top:5px;padding-buttom:5px;margin-top:5px;margin-bottom:5px;height:35px; padding-left:30px;" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-10 col-sm-offset-2 text-center">
                        <input type="submit" name="submit" class="btn btn-default" value="Submit" style="margin-top: 30px;width: 175px;margin-left: 50px;font-weight:bold;"  />
                    </div>
                </div>
            </form>
        }
    </div>

    <div class="col-md-2 last">
    </div>
</div>
<div class="col-sm-3">

</div>