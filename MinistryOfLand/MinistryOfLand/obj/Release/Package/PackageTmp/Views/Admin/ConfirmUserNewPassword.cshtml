@model MinistryOfLand.Models.UserAccount
@{
    ViewBag.Title = "ConfirmUserNewPassword";
    Layout = "~/Views/Shared/_PartialLayout.cshtml";
}

@if (Session["forgetUserID"]!= null)
{ 
    <text>
@Session["forgetUserID"];
@Session["forgetEmail"];
@Session["forgetUserFullname"];
</text>
    <img @Session["image"] style="height:200px;width:200px;"/>
<div class="col-sm-3">

</div>
<div class="col-sm-6">
    @using (Html.BeginForm( FormMethod.Post))
{
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h2 style="color:white;">Confuirm New Password</h2>
            <hr />
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.userId)

            <div class="form-group">
                <label for="confirmnewpassword" class="col-sm-4 control-label" style="padding-left: 3%">
                    Confirm New Password
                </label>
                <div class="col-sm-7">                
                    @Html.PasswordFor(model => model.password, new { @class = "from-control", @placeholder = "Enter new Password",type="Password", style = "width:525px;background-color:white;padding-top:5px;padding-buttom:5px;margin-top:5px;margin-bottom:5px;height:35px;padding-left:30px;" })
                    @Html.ValidationMessageFor(model => model.password)
                </div>
            </div> 

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default"style="margin-left: 28%" />
                </div>
            </div>
        </div>
    }
</div>
<div class="col-sm-3">

</div>


}