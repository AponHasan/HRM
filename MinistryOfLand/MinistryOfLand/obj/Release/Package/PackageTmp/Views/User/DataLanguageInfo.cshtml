@model IEnumerable<MinistryOfLand.Models.LanguageInfo>

@{
    ViewBag.Title = "DataLanguageInfo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Language Info</h2>
<div class="clildren-table">
    <table class="table">
        <tr>
            <th>
                Language
            </th>
            <th>
                Reading Skills
            </th>
            <th>
                Writing Skills
            </th>
            <th>
                Speaking Skills
            </th>
            <th>
                User Name
            </th>
            <th>Action</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Language)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReadSkills)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WriteSkills)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SpeakSkills)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserAccount.username)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditLanguageInfo", new { id = item.LanguageId }, new { @class = "edita" }) 
                    @Html.ActionLink("Details", "DetailsLanguageInfo", new { id = item.LanguageId }, new { @class = "details" }) 
                    @Html.ActionLink("Delete", "DeleteLanguageInfo", new { id = item.LanguageId }, new { @class = "deletea" })
                </td>
            </tr>
        }

    </table>
</div>