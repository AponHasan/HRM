@model MinistryOfLand.Models.PostingRecord
@{
    ViewBag.Title = "Posting";
}

<div class="row">
    <div class="col-md-2 st">

    </div>

    <div class="col-md-8 ">



        <div class="con-header">
            Posting Records
        </div>
        <div class="under">

        </div>
        <div class="formbody">
            @using (Html.BeginForm("Posting", "User", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <form class="form-horizontal" method="post">
                    <div class="form-group">
                        <label for="Name" class="col-sm-4 control-label lbl">
                            User Name
                        </label>
                        <div class="col-sm-7">
                            @Html.ValidationMessageFor(model => model.userId)
                            @Html.DropDownListFor(model => model.userId, @ViewBag.UserAccountId as SelectList, "Select User", new { @class = "from-control inputfil" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="DegreeTitel" class="col-sm-4 control-label lbl">
                            Organization
                        </label>
                        <div class="col-sm-7">
                            @Html.ValidationMessageFor(model => model.Organization)
                            @Html.TextBoxFor(model => model.Organization, new { @class = "from-control inputfil", @placeholder = "Organization" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="DegreeTitel" class="col-sm-4 control-label lbl">
                            Location
                        </label>
                        <div class="col-sm-7">
                            @Html.ValidationMessageFor(model => model.Location)
                            @Html.TextBoxFor(model => model.Location, new { @class = "from-control inputfil", @placeholder = "Location" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="Thana" class="col-sm-4 control-label lbl" >
                            Thana
                        </label>
                        <div class="col-sm-7">
                            @Html.ValidationMessageFor(model => model.Thana)
                            @Html.TextBoxFor(model => model.Thana, new { @class = "from-control inputfil", @placeholder = "Thana" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="District" class="col-sm-4 control-label lbl">
                            District
                        </label>
                        <div class="col-sm-7">
                            @Html.ValidationMessageFor(model => model.District)
                            @Html.TextBoxFor(model => model.District, new { @class = "from-control inputfil", @placeholder = "District" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Posting" class="col-sm-4 control-label lbl">
                            Posting from
                        </label>
                        <div class="col-sm-7">
                            @Html.ValidationMessageFor(model => model.Pfrom)
                            @Html.TextBoxFor(model => model.Pfrom, new { @class = "from-control inputfil", @placeholder = "Posting from" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="posting" class="col-sm-4 control-label lbl">
                            Posting To
                        </label>
                        <div class="col-sm-7">
                            @Html.ValidationMessageFor(model => model.PTo)
                            @Html.TextBoxFor(model => model.PTo, new { @class = "from-control inputfil", @placeholder = "Posting To" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="PayScale" class="col-sm-4 control-label lbl">
                            Pay Scale
                        </label>
                        <div class="col-sm-7">
                            @Html.ValidationMessageFor(model => model.PayScal)                       
                                @Html.DropDownListFor(model => model.PayScal, new List<SelectListItem>        {
            new SelectListItem{ Text="PG-15000", Value="PG-15000"},
            new SelectListItem{ Text="PG-18000", Value="PG-15000"},
            new SelectListItem{ Text="PG-20000", Value="PG-20000"},
            new SelectListItem{ Text="PG-25000", Value="PG-25000"},
            new SelectListItem{ Text="PG-30000", Value="PG-30000"},
            new SelectListItem{ Text="PG-35000", Value="PG-35000"}
        }, "Select Skills", new { @class = "inputfil"})                            
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="PostingDate" class="col-sm-4 control-label lbl" >
                            Posting Date (mm/dd/yyyy) 
                        </label>
                        <div class="col-sm-7">
                            @Html.ValidationMessageFor(model => model.PostingDate)
                            @Html.TextBoxFor(model => model.PostingDate, "{0:yyyy-MM-dd}", new { @class = "from-control inputfil", @placeholder = "(mm/dd/yyyy)", type = "Date" })

                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-10 col-sm-offset-2 text-center" style="margin-bottom:100px;">
                            <input type="submit" name="submit" class="btn btn-default" value="Submit" style="margin-top: 30px;width: 175px;margin-left: 50px;font-weight:bold;" />
                        </div>
                    </div>
                </form>
            }
        </div>
    </div>
    <div class="col-md-2 last">

    </div>
</div>
