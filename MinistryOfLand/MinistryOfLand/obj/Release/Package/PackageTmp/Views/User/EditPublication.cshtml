@model MinistryOfLand.Models.Publication

@{
    ViewBag.Title = "EditPublication";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-sm-2">

</div>
<div class="col-sm-8">
    <h2>EditPublication</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Publication</h4>
            <hr />
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.PublicationId)

            <div class="form-group">
                @Html.LabelFor(model => model.BooksTitle, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.BooksTitle)
                    @Html.ValidationMessageFor(model => model.BooksTitle)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Periodicals, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Periodicals)
                    @Html.ValidationMessageFor(model => model.Periodicals)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Monograph, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Monograph)
                    @Html.ValidationMessageFor(model => model.Monograph)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Journal, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Journal)
                    @Html.ValidationMessageFor(model => model.Journal)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Description)
                    @Html.ValidationMessageFor(model => model.Description)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Date, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Date)
                    @Html.ValidationMessageFor(model => model.Date)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.userId, "userId", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @*@Html.EditorFor(model => model.userId)*@
                    @Html.TextBoxFor(model => model.userId, new { @readonly = "readonly" })
                    @Html.ValidationMessageFor(model => model.userId)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
