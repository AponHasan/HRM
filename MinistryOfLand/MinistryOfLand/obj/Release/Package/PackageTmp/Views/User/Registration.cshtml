@model MinistryOfLand.Models.UserAccount
@{
    ViewBag.Title = "Registration";
}

<div class="row">
    <div class="col-md-2 st">

    </div>

    <div class="col-md-8 ">
        <div class="con-header">
            Registration
        </div>
        <div class="under">

        </div>
        <div class="formbody">
           @using (Html.BeginForm("Registration", "User", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <form class="form-horizontal" method="post">
                    <div class="form-group">
                        <label for="UserType" class="col-sm-4 control-label lbl">
                            User Type
                        </label>
                        <div class="col-sm-7">

                            @Html.ValidationMessageFor(model => model.UserType)
                            @Html.DropDownListFor(model => model.UserType, new List<SelectListItem>
        {
            new SelectListItem{ Text="Admin", Value="Admin"},
            new SelectListItem{ Text="User", Value="User"}
        }, "Select", new { @class = "inputfil" })
                            @*<select class="form-control required" name="Gender">
                    <option>1</option>
                    <option>2</option>
                </select>*@
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Name" class="col-sm-4 control-label lbl">
                           User ID
                        </label>
                        <div class="col-sm-7 ">
                            @Html.ValidationMessageFor(model => model.username)
                            @Html.TextBoxFor(model => model.username, new { @class = "from-control inputfil", @placeholder = "User Id" })
                            @*<input type="text" class="form-control required" name="Name" placeholder="Name" />*@
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="FathersName" class="col-sm-4 control-label lbl">
                            Password
                        </label>
                        <div class="col-sm-7">
                            @Html.ValidationMessageFor(model => model.password)
                            @Html.TextBoxFor(model => model.password, new { @class = "from-control inputfil", type = "Password", @placeholder = "Password" })
                            @*<input type="text" class="form-control required" name="FathersName" placeholder="Fathers Name" />*@
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="MothersName" class="col-sm-4 control-label lbl">
                            Email
                        </label>
                        <div class="col-sm-7">
                            @Html.ValidationMessageFor(model => model.email)
                            @Html.TextBoxFor(model => model.email, new { @class = "from-control inputfil", @placeholder = "Email" })
                            @*<input type="text" class="form-control required" name="MothersName" placeholder="Mothers Name" />*@
                        </div>
                    </div>   
                    <div class="form-group">
                        <label for="Name" class="col-sm-4 control-label lbl">
                            User Image
                        </label>
                        <div class="col-sm-7">
                            <input type="file" name="file" id="file" style="width: 100%;margin-left: 5px;margin-top: 5px;" /> <br />
                        </div>
                    </div>                      
                    <div class="form-group">
                        <div class="col-sm-10 col-sm-offset-2 text-center">
                            <input type="submit" name="submit" class="btn btn-default" value="submit" />
                        </div>
                    </div>
                </form>
            }
        </div>
    </div>
</div>

<div class="col-md-2 last">

</div>


